<main class="container user_profile tab_wrapper">
	<% if @user.profile_picture.attached? %>
    	<%= image_tag user_profile_picture(@user, 150), class: "user_profile-picture" %>
	<% end %>
    <h1><%= @user.name %></h1>
	<div class="user_profile_follows">
		<p><%= @user.followers.count %> follower </p>
		<p><%= @user.followings.count %> following </p>
	</div>
    <div class="tabs">
		<input type="radio" id="radio-1" name="tabs" checked />
		<label class="tab" for="radio-1">Posts</label>
		<input type="radio" id="radio-2" name="tabs" />
		<label class="tab" for="radio-2">Replies</label>
		<span class="glider"></span>
	</div>

    <%= render @user.authored_posts %>
</main>